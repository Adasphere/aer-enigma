      <StackLayout Padding="20,0,20,0">
          <Label Text="{Binding Text}"
                 Font="Medium" />

          <Label Text="{Binding InputDate}"
                 Font="Micro" />
      </StackLayout>
  </ContentView.Content>
</ContentView>