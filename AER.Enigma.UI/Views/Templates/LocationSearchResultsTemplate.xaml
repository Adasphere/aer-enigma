<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:AER.Enigma.UI.Behaviors;assembly=AER.Enigma.UI"
             xmlns:templates="clr-namespace:AER.Enigma.UI.Views.Templates;assembly=AER.Enigma.UI"
             x:Class="AER.Enigma.UI.Views.Templates.LocationSearchResultsTemplate">
  <ContentView.Content>
      <ListView ItemsSource="{Binding Locations}">
          <ListView.Behaviors>
              <behaviors:EventToCommandBehavior
                  EventName="ItemTapped"
                  Command="{Binding LocationSelectedCommand}"
                  EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}"/>
          </ListView.Behaviors>
          <ListView.ItemTemplate>
              <DataTemplate>
                  <ViewCell>
                      <templates:LocationSearchResultTemplate/>
                  </ViewCell>
              </DataTemplate>
          </ListView.ItemTemplate>
      </ListView>
  </ContentView.Content>
</ContentView>